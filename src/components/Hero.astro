// src/components/Hero.astro
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1>Tobias Hirzenberger</h1>
      <p class="subtitle">HTL Saalfelden | Technik-Freak</p>
      
      <div class="info-cards">
        <div class="info-card">
          <div class="label">Alter</div>
          <div class="value">18 Jahre</div>
        </div>
        <div class="info-card">
          <div class="label">Wohnort</div>
          <div class="value">St. Johann im Pongau</div>
        </div>
        <div class="info-card">
          <div class="label">Status</div>
          <div class="value">Schüler</div>
        </div>
      </div>

      <p class="description">
        Schüler an der HTL Saalfelden mit Leidenschaft für moderne Webtechnologien, 
        Programmierung und innovative Projekte. Ständig auf der Suche nach neuen 
        Herausforderungen und Möglichkeiten, meine Fähigkeiten weiterzuentwickeln.
      </p>
      <a href="#contact" class="cta-button">Kontakt aufnehmen</a>
    </div>
    <div class="hero-image">
      <div class="profile-image" id="profileImage">
        <img src="/Images/tobias.png" alt="Tobias Hirzenberger" id="profileImg" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8rem 0 4rem;
    position: relative;
  }

  .hero-content {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-text .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .info-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .info-card {
    background: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    text-align: center;
  }

  .info-card .label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  .info-card .value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .hero-text .description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-image {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), #8b5cf6);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    animation: float 3s ease-in-out infinite;
    padding: 0.5rem;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    cursor: pointer;
    user-select: none;
    transition: transform 0.2s;
  }

  .profile-image:active img {
    transform: scale(0.95);
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--accent);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s;
  }

  .cta-button:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text h1 {
      font-size: 2.5rem;
    }

    .profile-image {
      width: 300px;
      height: 300px;
    }

    .info-cards {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const profileImg = document.getElementById('profileImg') as HTMLImageElement;
  const originalImage = '/Images/tobias.png';
  const alternateImage = '/Images/tobias2.png';

  if (profileImg) {
    // Bei Maus gedrückt halten
    profileImg.addEventListener('mousedown', () => {
      profileImg.src = alternateImage;
    });

    // Wenn Maus losgelassen wird
    profileImg.addEventListener('mouseup', () => {
      profileImg.src = originalImage;
    });

    // Wenn Maus das Bild verlässt während gedrückt
    profileImg.addEventListener('mouseleave', () => {
      profileImg.src = originalImage;
    });

    // Für Touch-Geräte (Mobile)
    profileImg.addEventListener('touchstart', (e) => {
      e.preventDefault();
      profileImg.src = alternateImage;
    });

    profileImg.addEventListener('touchend', () => {
      profileImg.src = originalImage;
    });

    profileImg.addEventListener('touchcancel', () => {
      profileImg.src = originalImage;
    });
  }
</script>