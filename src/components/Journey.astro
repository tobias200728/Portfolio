<style>
  section {
    padding: 6rem 0;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
  }
  .journey-grid {
    display: grid;
    gap: 2rem;
  }

  .journey-item {
    background: var(--bg-secondary);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s;
    display: flex;
    gap: 1.5rem;
    align-items: start;
  }

  .journey-logo {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 12px;
    overflow: hidden;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
  }

  .journey-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Spezielle Anpassung für Volksschule Logo */
  .journey-item:first-child .journey-logo img {
    object-fit: cover;
    transform: scale(0.6);
  }

  .journey-content {
    flex: 1;
  }

  .journey-item:hover {
    border-color: var(--accent);
    transform: translateY(-5px);
  }

  .journey-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
  }

  .journey-title h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .journey-role {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .journey-date {
    color: var(--text-secondary);
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .journey-item ul {
    list-style: none;
    margin-top: 1rem;
  }

  .journey-item li {
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    position: relative;
    color: var(--text-secondary);
  }

  .journey-item li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .journey-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .journey-logo {
      margin-bottom: 1rem;
    }

    .journey-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .journey-date {
      margin-top: 0.5rem;
    }
  }
</style>